<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextColorPrimaryStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="TextColorSecondaryStyle">
        <item name="android:layout_width">@dimen/item_operator_width</item>
        <item name="android:layout_height">@dimen/item_operator_height</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="IconColorPrimaryStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/primary_icon_color</item>
    </style>

    <style name="IconPrimaryColorSecondaryStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/primary_color</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/material_grey</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/number_input_height</item>
        <item name="android:gravity">end|bottom</item>
        <item name="android:textAppearance">@style/TextColorPrimaryStyle</item>
        <item name="android:hint">@string/_0_0</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:padding">8dp</item>
        <item name="android:importantForAutofill" tools:ignore="NewApi">no</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

</resources>